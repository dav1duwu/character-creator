<Window x:Class="chara_crt.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chara_crt"
        mc:Ignorable="d"
        Title="Character Creator" Height="500" Width="800" Background="White">
    <StackPanel>
        <Button x:Name="btn_load" Content="Load Charactera" FontSize="35" FontFamily="Comic Sans MS" Margin="15" Click="btn_load_Click"/>
        <Grid>
            <Border x:Name="border_color" BorderThickness="5" BorderBrush="{StaticResource BorderColor}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" Height="Auto">
                <Image x:Name="final_image" Source="" Width="212" Height="300" Stretch="Uniform" />
            </Border>
        </Grid>
        <Label x:Name="final_lbl" Content="" HorizontalAlignment="Center" FontSize="45" FontFamily="Comic Sans MS"/>
    </StackPanel>
</Window>
